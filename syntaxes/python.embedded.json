          "end": "(\\2)",
          "contentName": "meta.embedded.string.raw.bat.python",
          "patterns": [
            {
              "include": "source.batchfile"
            }
          ],
          "beginCaptures": {
            "1": {
              "name": "storage.type.string.python"
            },
            "2": {
              "name": "punctuation.definition.string.begin.python"
            }
